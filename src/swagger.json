{
  "openapi":"3.0.2",
  "info": {
    "title":"Chatter",
    "version":"1.0",
    "license": {
      "name": "MIT",
      "url": "https://raw.githubusercontent.com/DiegoVictor/chatter/main/LICENSE"
    }
  },
  "servers": [
    {
      "url":"http://localhost:3333/v1"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "title": "User",
                "required": ["email"],
                "properties": {
                  "email": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "email": "johndoe@example.com"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Create a new user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                },
                "example": {
                  "id": "17c6f66d-a24b-45e0-8c3f-2b3411e51fe8",
                  "email": "johndoe@example.com",
                  "created_at": "2021-08-29T19:05:04.000Z"
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}/messages": {
      "get": {
        "tags": ["Users"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "17c6f66d-a24b-45e0-8c3f-2b3411e51fe8"
          }
        ],
        "responses": {
          "200": {
            "description": "Return user's messages",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Message"
                      },
                      {
                        "title": "Message",
                        "properties": {
                          "user": {
                            "$ref": "#/components/schemas/User"
                          }
                        }
                      }
                    ]
                  }
                },
                "example": [
                  {
                    "id": "4fdbfa46-7a05-4bed-b4a0-b6f1d354b261",
                    "user_id": "17c6f66d-a24b-45e0-8c3f-2b3411e51fe8",
                    "admin_id": "aa199c1f-59e3-403b-9adf-3035b1bcd16a",
                    "text": "Lorem ipsum dolor sit amet",
                    "created_at": "2021-08-29T19:14:05.000Z",
                    "user": {
                      "id": "17c6f66d-a24b-45e0-8c3f-2b3411e51fe8",
                      "email": "johndoe@example.com",
                      "created_at": "2021-08-29T19:05:04.000Z"
                    }
                  }
                ]
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "statusCode": 404,
                  "error": "Not Found",
                  "message": "User not found",
                  "code": 245,
                  "docs": "https://github.com/DiegoVictor/chatter#errors-reference"
                }
              }
            }
          }
        }
      }
    },
  },
  "components": {
    "schemas": {
      "User": {
        "properties": {
          "id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          }
        }
      },
      "Message": {
        "properties": {
          "id": {
            "type": "string"
          },
          "user_id": {
            "type": "string"
          },
          "admin_id": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          }
        }
      },
      "Error": {
        "properties": {
          "statusCode": {
            "type": "integer"
          },
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "code": {
            "type": "integer"
          },
          "docs": {
            "type": "string"
          }
        }
      }
    }
  }
}
